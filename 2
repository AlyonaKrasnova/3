#include <iostream>
using namespace std;

int DvaDes(int a, int k, int s) {
    if (a != 0) {
        s = s + ((a % 10) * k);
        a = a / 10;
        k *= 2;
        DvaDes(a, k, s);
    }
    else return s;
}
int main() {
    int a, k = 1, s = 0;
    cin >> a;
    cout << DvaDes(a, k, s);
        
}
